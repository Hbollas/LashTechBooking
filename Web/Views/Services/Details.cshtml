@model Domain.Service
@{
    ViewData["Title"] = Model.Name;
}

<!-- Top band with title + quick facts -->
<section class="bg-stone/60 border-b border-black/5 py-8">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6">
      <div>
        <h1 class="font-display text-3xl md:text-4xl text-ink"> @Model.Name </h1>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
          <div class="mt-4 max-w-3xl rounded-2xl bg-white/70 border border-black/5 p-4 md:p-5">
            <p class="font-serif text-[18px] leading-relaxed text-ink">
              @Model.Description
            </p>
          </div>
        }
      </div>

      <div class="bg-white rounded-2xl p-5 border border-black/5 shadow max-w-sm md:w-80">
        <dl class="text-sm text-ink/90">
          <div class="flex justify-between py-2 border-b border-black/5">
            <dt>Duration</dt><dd>@Model.DurationMinutes min</dd>
          </div>
          <div class="flex justify-between py-2">
            <dt>Price</dt><dd>$@((Model.PriceCents / 100.00).ToString(""))</dd>
          </div>
        </dl>
        <div class="mt-4 flex gap-3">
          <a asp-controller="Booking" asp-action="Create" asp-route-serviceId="@Model.Id"
             class="inline-flex items-center rounded-full bg-ink text-white px-6 py-2.5 text-sm font-semibold hover:opacity-90">
            Book now
          </a>
          <a asp-controller="Services" asp-action="Index"
             class="inline-flex items-center text-ink/70 hover:underline">
            Back to services
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Body area (optional extras) -->
<section class="py-12">
  <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-3 gap-8">
    <div class="md:col-span-2">
      <div class="bg-panel rounded-2xl p-6 shadow">
        <h2 class="font-serif text-xl text-ink mb-2">What to expect</h2>
        <p class="text-ink/90 leading-relaxed">
          @(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description 
            : "Arrive a few minutes early. Please come with clean, makeup-free lashes. Late arrivals may shorten the appointment.")
        </p>
      </div>

      <p class="mt-6 text-sm text-mute">
        By booking, you agree to our <a href="/#policies" class="underline">policies</a>.
      </p>
    </div>

    <aside class="space-y-4">
      <div class="bg-white rounded-2xl p-6 border border-black/5 shadow">
        <h3 class="font-serif text-lg text-ink">Quick tips</h3>
        <ul class="mt-2 text-sm text-ink/90 list-disc ps-5 space-y-1">
          <li>No caffeine right before your appointment.</li>
          <li>Avoid oil-based products on lash day.</li>
          <li>Reschedule if youâ€™re feeling unwell.</li>
        </ul>
      </div>
    </aside>
  </div>
</section>
