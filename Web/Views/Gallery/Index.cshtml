@{
    ViewData["Title"] = "Gallery";
}

<section class="max-w-screen-2xl mx-auto px-6 py-12">
    <h1 class="font-display text-4xl md:text-5xl text-ink mb-10">My Work</h1>

    <!-- Classic Set -->
    <h2 class="font-serif text-2xl text-ink/80 mb-6">Classic Set</h2>
    <div class="grid md:grid-cols-2 gap-10 mb-16">
        <figure class="bg-panel rounded-2xl overflow-hidden shadow-sm">
            <img src="~/images/gallery/classic-before.jpg" alt="Classic set (before)" class="w-full h-[380px] object-cover transition group-hover:scale-105">
            <figcaption class="px-5 py-3 text-mute text-sm">Before</figcaption>
        </figure>
        <figure class="bg-panel rounded-2xl overflow-hidden shadow-sm">
            <img src="~/images/gallery/classic-after.jpg" alt="Classic set (after)" class="w-full h-[380px] object-cover">
            <figcaption class="px-5 py-3 text-mute text-sm">After</figcaption>
        </figure>
    </div>


    <!-- Volume Set -->
    <h2 class="font-serif text-2xl text-ink/80 mb-6">Volume Set</h2>
    <div class="grid md:grid-cols-2 gap-10 mb-16">
        <figure class="bg-panel rounded-2xl overflow-hidden shadow-sm">
            <img src="~/images/gallery/volume-before.jpg" alt="Volume set (before)" class="w-full h-[380px] object-cover">
            <figcaption class="px-5 py-3 text-mute text-sm">Before</figcaption>
        </figure>
        <figure class="bg-panel rounded-2xl overflow-hidden shadow-sm">
            <img src="~/images/gallery/volume-after.jpg" alt="Volume set (after)" class="w-full h-[380px] object-cover">
            <figcaption class="px-5 py-3 text-mute text-sm">After</figcaption>
        </figure>
    </div>
        <!-- Hybrid Set -->
    <h2 class="font-serif text-2xl text-ink/80 mb-6">Hybrid Set</h2>
    <div class="grid md:grid-cols-2 gap-10 mb-16">
        <figure class="bg-panel rounded-2xl overflow-hidden shadow-sm">
            <img src="~/images/gallery/Hybrid-before.jpg" alt="Hybrid set (before)" class="w-full h-[380px] object-cover transition group-hover:scale-105">
            <figcaption class="px-5 py-3 text-mute text-sm">Before</figcaption>
        </figure>
        <figure class="bg-panel rounded-2xl overflow-hidden shadow-sm">
            <img src="~/images/gallery/Hybrid-after.jpg" alt="Hyrbid set (after)" class="w-full h-[380px] object-cover">
            <figcaption class="px-5 py-3 text-mute text-sm">After</figcaption>
        </figure>
    </div>
</section>
