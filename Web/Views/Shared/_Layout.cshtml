@*
  _Layout.cshtml (modified)
  - Full-width <main> (no container wrapper)
  - Header/Footer use container-xl (wider than default)
  - Removed "bg-white" so navbar uses your brand.css colors
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ashley's Website</title>

    <script type="importmap"></script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Inter:wght@400;600&family=Playfair+Display:ital,wght@1,600&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
        <script>
        tailwind.config = {
            theme: {
            extend: {
                colors: {
                cream:  "#f5f2ef",   // page bg
                stone:  "#d7d4d1",   // hero bg
                blush:  "#f4cfc8",   // about band
                panel:  "#efeae7",   // cards
                ink:    "#3f3534",   // primary text
                mute:   "#6d6260"    // secondary text
                },
                fontFamily: {
                sans: ['Inter','ui-sans-serif','system-ui'],
                serif: ['"Cormorant Garamond"','ui-serif','Georgia'],
                display: ['"Playfair Display"','serif']
                }
            }
            }
        }
        </script>

        <!-- Styles -->
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/brand.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
 </head>
<body>
        <header class="sticky top-0 z-50 bg-white/80 backdrop-blur border-b border-black/5">
            <div class="max-w-screen-2xl mx-auto px-6 py-3 flex items-center gap-6">
                <a asp-controller="Home" asp-action="Index"
                class="font-display text-2xl md:text-3xl tracking-wide text-ink no-underline hover:opacity-80">
                AA’s Aesthetics
                </a>

                    <nav class="ms-auto">
                    <ul class="flex items-center gap-6 text-[15px]">
                        <li><a asp-controller="Services" asp-action="Index" class="text-ink hover:opacity-75">Services</a></li>
                        <li><a asp-controller="Gallery"  asp-action="Index" class="text-ink hover:opacity-75">Gallery</a></li>
                        <li><a href="/#about" class="text-ink hover:opacity-75">About / Info</a></li>
                    </ul>
                    </nav>

                <a asp-controller="Services" asp-action="Index"
                class="ms-4 inline-flex items-center rounded-full bg-ink text-white px-5 py-2 text-sm font-semibold hover:opacity-90">
                Book
                </a>
            </div>
        </header>


    <!-- Full-width main -->
         <main role="main">
        @if (TempData["Message"] is string flash)
        {                
            <div class="max-w-screen-xl mx-auto px-4">
                       <div class="mt-3 rounded bg-blue-50 text-blue-800 px-4 py-2">@flash</div>
            </div>
        }
        @RenderBody()
        </main>


    <footer class="border-t border-black/5 text-mute">
        <div class="max-w-screen-2xl mx-auto px-6 py-8 text-sm">
                © 2025 — AA’s Aesthetics ·
            <a asp-controller="Home" asp-action="Privacy" class="underline hover:no-underline">Privacy</a>
        </div>
    </footer>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
